<div class="body-overall-container">
  <div class="booking-show-container">
    <h1 id="booking-show-title">Congratulations! You just booked this trip!</h1>
      <div class="booking-show-card">
          <% if @booking.trip.photo.attached? %>
            <%= cl_image_tag @booking.trip.photo.key%>
          <% end %>
          <div class="d-flex justify-content-between mx-5">
            <div class="card-showbooking-info">
              <h2><%= @booking.trip.name %></h2>
              <div id="dates-booking-show">
                  <p>starting date: <%= @booking.trip.start_date.to_date.strftime("%d/%m/%Y") %></p>
                  <p>ending date: <%= @booking.trip.end_date.to_date.strftime("%d/%m/%Y") %></p>
              </div>
            </div>
            <div id="explorer-card-bookings-show-flex">
                <p>Your Local Exporer</p>
                <div class="explorer-card-bookings-show">
                  <% if @booking.trip.user.profile.profile_photo.attached? %>
                    <%= cl_image_tag @booking.trip.user.profile.profile_photo.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
                      <% else %>
                    <%= image_tag "https://www.slotcharter.net/wp-content/uploads/2020/02/no-avatar.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
                  <% end %>
                  <%= link_to @booking.trip.user.profile.username, profile_path(@booking.trip.user.profile.id) %>
                </div>
            </div>
          </div>

      </div>
    <div class="booking-show-buttons-card">
      <ul class="booking-show-inline">
      <li> <%= link_to 'Discover more trips', trips_path(@trip), :class => "btn btn-success" %> </li>
      <%= link_to 'Open chat', chatroom_path(@chatroom), :class => "btn btn-success" %>
      <% if policy(@booking).destroy? %>
    <li><%= link_to "Delete booking", trip_booking_path(@booking), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, :class => "btn btn-success"%> </li>
      <% end %>
    <li><%= link_to 'Show my bookings', bookings_path(@booking), :class => "btn btn-success" %> </li>
      </ul>
    </div>
  </div>
</div>
