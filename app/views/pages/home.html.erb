

<div class="banner-background">
  <div class="container-welcome">
    <% if !user_signed_in? %>
      <h1>Welcome!</h1>
      <p>Be local anywhere with us</p>
      <div><%= link_to "Login", new_user_session_path, class: "btn btn-success" %>
      <br>
      <%= link_to "Sign up", new_user_registration_path, class: "btn btn-success" %>
      </div>
    <% elsif user_signed_in? && current_user.profile == nil%>
      <br>
      <p>So excited to have you with us! Please create a Profile first!</p>
      <%= link_to "Create a Profile", new_profile_path, class: "btn btn-success"%>
    <% else %>
      <%= link_to "Available trips", trips_path, class: "btn btn-success"%>
      <br>
      <%= link_to "Create a trip", new_trip_path, class: "btn btn-success" %>
      <br>
  </div>
    <div class="container-searchbar">
      <div class="row justify-content-center">
      <%= form_with url: trips_path, method: :get, class: "d-flex" do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Find a trip"%>
          <%= submit_tag "Search", class: "btn btn-succes" %>
      <% end %>
      </div>
    </div>

</div>

<% end %>
