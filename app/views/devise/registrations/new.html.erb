<div class="body-overall-container">
  <div class="sign-up-container">
    <h2>Sign up</h2>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
      <%= f.error_notification %>

      <div class="sign-up-fill-card">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" }, input_html: {class: "sign-up-form-rest"}%>
        <%= f.input :password,
                    required: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password" }, input_html: {class: "sign-up-form-rest"} %>
        <%= f.input :password_confirmation,
                    required: true,
                    input_html: { autocomplete: "new-password" }, input_html: {class: "sign-up-form-rest"} %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Sign up", class: "btn btn-success" %>
      </div>
    <% end %>
    <div class="got-account">
      <h5>Got an account?</h5>
        <%= render "devise/shared/links" %>
    </div>
  </div>
</div>