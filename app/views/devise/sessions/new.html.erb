<div class="body-overall-container">
  <div class="sign-in-container">
    <h2>Log in</h2>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
      <div class="sign-in-fill-card">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" }, input_html: {class: "sign-in-form-rest"} %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" }, input_html: {class: "sign-in-form-rest"} %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class: "btn btn-success"%>
    </div>
    <% end %>
    <div class="got-account">
      <h5>Not registered?</h5>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
