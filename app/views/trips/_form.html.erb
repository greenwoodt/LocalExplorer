<%= simple_form_for(@trip) do |f| %>

  <%= f.input :name, input_html: { required: true }, input_html: {class: "trip-form-rest"}%>
  <%= f.input :description, label: 'Add some description of the trip!', input_html: {class: "trip-form-rest"}%>
  <%= f.input :address, label: "Address (starting location)", input_html: {class: "trip-form-rest"}%>
    <div class="trip-form-elements">
      <%= f.input :capacity, collection: (1..4), input_html: {class: "trip-elements-3"}%>
      <%= f.input :difficulty, collection: %w[Easy Medium Hard], input_html: {class: "trip-elements-3"}%>
      <%= f.association :category, input_html: {class: "trip-elements-3"}%>
    </div>
  <%= f.input :photo, as: :file, input_html: {class: "trip-form-rest"}, input_html: { required: true }%>
    <div class="trip-form-elements">
      <%= f.input :start_date, as: :string, required: false, input_html: {class: "datepicker", id: "range_start"} %>
      <%= f.input :end_date, as: :string, required: false, input_html: {class: "datepicker", id: "range_end"} %>
    </div>
  <%= f.input :price_cents, label: 'Estimated Transportation Costs', input_html: {class: "trip-form-rest"}%>
  <%= f.submit class: "btn btn-success" %>
<% end %>
